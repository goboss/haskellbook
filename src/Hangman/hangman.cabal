name:                hangman
version:             0.1.0.0
synopsis:            Playing Hangman
homepage:            https://github.com/haskellbook/hangman
license:             BSD3
license-file:        LICENSE
author:              MichaÅ‚ Wyrwalski
maintainer:          haskellbook.com
category:            Web
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  README.md

executable hangman
  hs-source-dirs:      src
  main-is:             Main.hs
  other-modules:       Puzzle
                     , Game
  default-language:    Haskell2010
  build-depends:       base >= 4.7 && < 5
                     , random
                     , split

test-suite unit-tests
  type:                exitcode-stdio-1.0
  ghc-options:         -Wall -fno-warn-orphans
  hs-source-dirs:      src, test
  main-is:             Spec.hs
  default-language:    Haskell2010
  build-depends:       base >= 4.7 && <5
                     , hspec
                     , QuickCheck
